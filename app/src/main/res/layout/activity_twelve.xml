<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Top Navigation Tabs -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Following"
            android:textColor="#8E8E93"
            android:textSize="16sp"
            android:gravity="center"
            android:fontFamily="sans-serif" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="You"
                android:textColor="#262626"
                android:textSize="16sp"
                android:gravity="center"
                android:fontFamily="sans-serif" />

            <!-- Red underline for You tab -->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#E91E63"
                android:layout_marginHorizontal="60dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Follow Requests Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="#F8F8F8"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Follow Requests"
            android:textSize="16sp"
            android:textColor="#262626"
            android:fontFamily="sans-serif" />

    </LinearLayout>

    <!-- Activity Feed ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- New Section Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="#F8F8F8"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="New"
                    android:textSize="16sp"
                    android:textColor="#262626"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- Activity Item 1: karenme liked your photo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_profile_circle"
                    android:src="@drawable/profile_mother"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="karenme liked your photo. 1h"
                    android:textSize="14sp"
                    android:textColor="#262626" />

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/bg_rounded_image"
                    android:scaleType="centerCrop" />

            </LinearLayout>

            <!-- Today Section Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="#F8F8F8"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Today"
                    android:textSize="16sp"
                    android:textColor="#262626"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- Activity Item 2: kiero_d, zackjohn and 26 others liked your photo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_profile_circle"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="kiero_d, zackjohn and 26 others liked your photo. 3h"
                    android:textSize="14sp"
                    android:textColor="#262626" />

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/bg_rounded_image"
                    android:scaleType="centerCrop" />

            </LinearLayout>

            <!-- This Week Section Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="#F8F8F8"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="This Week"
                    android:textSize="16sp"
                    android:textColor="#262626"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- Activity Item 3: craig_love mentioned you in a comment -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_profile_circle"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="craig_love mentioned you in a comment: @jacob_w exactly.. 2d"
                        android:textSize="14sp"
                        android:textColor="#262626" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_heart_outline"
                            android:layout_marginEnd="16dp"

 />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reply"
                            android:textSize="14sp"
                            android:textColor="#8E8E93" />

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/bg_rounded_image"
                    android:scaleType="centerCrop" />

            </LinearLayout>

            <!-- Activity Item 4: martini_rond started following you -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_profile_circle"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="martini_rond started following you. 3d"
                    android:textSize="14sp"
                    android:textColor="#262626" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:background="@drawable/button_background"
                    android:text="Message"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:paddingHorizontal="20dp"
                    android:minWidth="0dp"
                    app:backgroundTint="@null"
                    />

            </LinearLayout>

            <!-- Activity Item 5: maxjacobson started following you -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_profile_circle"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="maxjacobson started following you. 3d"
                    android:textSize="14sp"
                    android:textColor="#262626" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:background="@drawable/button_background"
                    android:text="Message"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:paddingHorizontal="20dp"
                    android:minWidth="0dp"
                    app:backgroundTint="@null"
                    />

            </LinearLayout>

            <!-- Activity Item 6: mis_potter started following you -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_profile_circle"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="mis_potter started following you. 3d"
                    android:textSize="14sp"
                    android:textColor="#262626" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:background="#C8AA6E"
                    android:text="Follow"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:paddingHorizontal="24dp"
                    android:minWidth="0dp"
                    app:backgroundTint="@null"
                    />

            </LinearLayout>

            <!-- This Month Section Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="#F8F8F8"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="This Month"
                    android:textSize="16sp"
                    android:textColor="#262626"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- Partial view of next item -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_profile_circle"
                    android:scaleType="centerCrop" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:gravity="center"
        android:paddingHorizontal="24dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:src="@drawable/ic_home_filled"
            android:scaleType="center"

 />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:src="@drawable/ic_search"
            android:scaleType="center"

 />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:src="@drawable/ic_add_box"
            android:scaleType="center"

 />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:src="@drawable/ic_heart_outline"
            android:scaleType="center"
            android:tint="#E91E63" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:src="@drawable/profile_mother"
            android:background="@drawable/bg_profile_circle"
            android:scaleType="center" />

    </LinearLayout>

    <!-- Bottom Indicator -->
    <View
        android:layout_width="134dp"
        android:layout_height="4dp"
        android:layout_gravity="center"
        android:background="#000000"
        android:layout_marginBottom="8dp" />

</LinearLayout>