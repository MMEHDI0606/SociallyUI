<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:id="@+id/page5">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNavigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:background="#FFFFFF">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_camera"
                    android:contentDescription="Camera" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Socially"
                    android:textSize="24sp"
                    android:textColor="#B85450"
                    android:fontFamily="serif"
                    android:gravity="center" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_share"
                    android:layout_marginRight="16dp"
                    android:contentDescription="Share" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_send"

                    android:contentDescription="Send" />



            </LinearLayout>

            <!-- Stories Section -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">

                    <!-- Your Story -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginRight="16dp">

                        <FrameLayout
                            android:layout_width="70dp"
                            android:layout_height="70dp">

                            <ImageView
                                android:layout_width="66dp"
                                android:layout_height="66dp"
                                android:src="@drawable/story_your"
                                android:layout_gravity="center"
                                android:background="@drawable/story_circle_background"
                                android:scaleType="centerCrop" />

                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Your Story"
                            android:textSize="12sp"
                            android:textColor="#333333"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <!-- karennae Story -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginRight="16dp">

                        <ImageView
                            android:layout_width="66dp"
                            android:layout_height="66dp"
                            android:src="@drawable/story_karennae"
                            android:background="@drawable/story_circle_background"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="karennae"
                            android:textSize="12sp"
                            android:textColor="#333333"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <!-- zackjohn Story -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginRight="16dp">

                        <ImageView
                            android:layout_width="66dp"
                            android:layout_height="66dp"
                            android:src="@drawable/story_zackjohn"
                            android:background="@drawable/story_circle_background"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="zackjohn"
                            android:textSize="12sp"
                            android:textColor="#333333"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <!-- kieron_d Story -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginRight="16dp">

                        <ImageView
                            android:layout_width="66dp"
                            android:layout_height="66dp"
                            android:src="@drawable/story_kieron"
                            android:background="@drawable/story_circle_background"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="kieron_d"
                            android:textSize="12sp"
                            android:textColor="#333333"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <!-- craig Story -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginRight="16dp">

                        <ImageView
                            android:layout_width="66dp"
                            android:layout_height="66dp"
                            android:src="@drawable/story_craig"
                            android:background="@drawable/story_circle_background"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="craig_..."
                            android:textSize="12sp"
                            android:textColor="#333333"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </LinearLayout>

            </HorizontalScrollView>

            <!-- Post -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">

                <!-- Post Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/profile_joshua"
                        android:background="@drawable/profile_circle_background"
                        android:scaleType="centerCrop" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginLeft="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="joshua.l ●"
                            android:textSize="14sp"
                            android:textColor="#333333"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tokyo, Japan"
                            android:textSize="12sp"
                            android:textColor="#666666" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_more_horiz"
                        android:contentDescription="More options" />

                </LinearLayout>

                <!-- Post Image with 1/3 indicator -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="400dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/tokyo_post"
                        android:scaleType="centerCrop" />

                    <!-- Page Indicator -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1/3"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/indicator_background"
                        android:padding="6dp"
                        android:layout_gravity="top|right"
                        android:layout_margin="12dp" />

                </FrameLayout>

                <!-- Post Actions -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">

                    <ImageView
                        android:id="@+id/likeButton"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_heart_outline"
                        android:contentDescription="Like"
                        android:layout_marginRight="16dp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_comment"
                        android:contentDescription="Comment"
                        android:layout_marginRight="16dp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_share_post"
                        android:contentDescription="Share"
                        android:layout_marginRight="8dp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_bookmark_outline"
                        android:contentDescription="Save" />

                </LinearLayout>

                <!-- Like Count -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Liked by craig_love and 44,686 others"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_marginBottom="4dp" />

                <!-- Post Caption -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="joshua.l The game in Japan was amazing and I want to share some photos"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_marginBottom="16dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:elevation="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home_filled"
                android:contentDescription="Home" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_search"
                android:contentDescription="Search"
                android:id="@+id/search_button"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_add_box"
                android:contentDescription="Add" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_favorite_outline"
                android:contentDescription="Activity" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/profile_current_user"
                android:background="@drawable/profile_circle_background"
                android:scaleType="centerCrop" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>