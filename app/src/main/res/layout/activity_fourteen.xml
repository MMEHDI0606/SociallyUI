<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Top Navigation Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:background="#FFFFFF">

        <!-- Cancel Button -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textSize="16sp"
            android:textColor="#262626"
            android:fontFamily="sans-serif" />

        <!-- Edit Profile Title (Centered) -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Edit Profile"
            android:textSize="18sp"
            android:textColor="#262626"
            android:fontFamily="sans-serif-medium"
            android:gravity="center" />

        <!-- Done Button -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            android:textSize="16sp"
            android:textColor="#C8AA6E"
            android:fontFamily="sans-serif" />

    </LinearLayout>

    <!-- ScrollView for Form Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Profile Picture Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingVertical="32dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/bg_profile_circle"
                    android:src="@drawable/profile_mother"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change Profile Photo"
                    android:textSize="16sp"
                    android:textColor="#C8AA6E"
                    android:fontFamily="sans-serif"
                    android:layout_marginTop="16dp" />

            </LinearLayout>

            <!-- Form Fields -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp">

                <!-- Name Field -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="12dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textSize="16sp"
                        android:textColor="#262626"
                        android:fontFamily="sans-serif" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Jacob West"
                        android:textSize="16sp"
                        android:textColor="#262626"
                        android:fontFamily="sans-serif"
                        android:layout_marginStart="16dp" />

                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EFEFEF"
                    android:layout_marginStart="96dp" />

                <!-- Username Field -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="12dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Username"
                        android:textSize="16sp"
                        android:textColor="#262626"
                        android:fontFamily="sans-serif" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="jacob_w"
                        android:textSize="16sp"
                        android:textColor="#262626"
                        android:fontFamily="sans-serif"
                        android:layout_marginStart="16dp" />

                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EFEFEF"
                    android:layout_marginStart="96dp" />

                <!-- Website Field -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="12dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Website"
                        android:textSize="16sp"
                        android:textColor="#262626"
                        android:fontFamily="sans-serif" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Website"
                        android:textSize="16sp"
                        android:textColor="#C0C0C0"
                        android:fontFamily="sans-serif"
                        android:layout_marginStart="16dp" />

                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EFEFEF"
                    android:layout_marginStart="96dp" />

                <!-- Bio Field -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="top"
                    android:paddingVertical="12dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Bio"
                        android:textSize="16sp"
                        android:textColor="#262626"
                        android:fontFamily="sans-serif" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Digital goodies designer "
                            android:textSize="16sp"
                            android:textColor="#262626"
                            android:fontFamily="sans-serif" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@pixsellz"
                            android:textSize="16sp"
                            android:textColor="#4A90E2"
                            android:fontFamily="sans-serif" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Everything is designed."
                            android:textSize="16sp"
                            android:textColor="#262626"
                            android:fontFamily="sans-serif" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EFEFEF"
                    android:layout_marginStart="96dp" />

                <!-- Switch to Professional Account -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Switch to Professional Account"
                        android:textSize="16sp"
                        android:textColor="#C8AA6E"
                        android:fontFamily="sans-serif" />

                </LinearLayout>

                <!-- Section Header -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Private Information"
                    android:textSize="16sp"
                    android:textColor="#262626"
                    android:fontFamily="sans-serif-medium"
                    android:paddingVertical="16dp" />

                <!-- Email Field -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="12dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textSize="16sp"
                        android:textColor="#262626"
                        android:fontFamily="sans-serif" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="jacob.west@gmail.com"
                        android:textSize="16sp"
                        android:textColor="#262626"
                        android:fontFamily="sans-serif"
                        android:layout_marginStart="16dp" />

                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EFEFEF"
                    android:layout_marginStart="96dp" />

                <!-- Phone Field -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="12dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Phone"
                        android:textSize="16sp"
                        android:textColor="#262626"
                        android:fontFamily="sans-serif" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="+1 202 555 0147"
                        android:textSize="16sp"
                        android:textColor="#262626"
                        android:fontFamily="sans-serif"
                        android:layout_marginStart="16dp" />

                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EFEFEF"
                    android:layout_marginStart="96dp" />

                <!-- Gender Field -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="12dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Gender"
                        android:textSize="16sp"
                        android:textColor="#262626"
                        android:fontFamily="sans-serif" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Male"
                        android:textSize="16sp"
                        android:textColor="#262626"
                        android:fontFamily="sans-serif"
                        android:layout_marginStart="16dp" />

                </LinearLayout>

                <!-- Extra spacing at bottom -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="100dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Indicator -->
    <View
        android:layout_width="134dp"
        android:layout_height="4dp"
        android:layout_gravity="center"
        android:background="#000000"
        android:layout_marginBottom="8dp" />

</LinearLayout>